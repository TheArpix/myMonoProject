@model IEnumerable<Project.Service.Models.VehicleMake>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div style='font-family:Arial'>

    @using (Html.BeginForm("Index", "VehicleMakes", FormMethod.Get))
    {
        //the following are search options
        <b> Tražilica: </b>@Html.RadioButton("option", "Name") <text>Naziv automobila</text> @Html.RadioButton("option", "Abrv") <text> Kratica </text>
        @Html.TextBox("search") <input type="submit" name="submit" value="Search" />
    }

</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abrv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Abrv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
